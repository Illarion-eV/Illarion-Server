{
	"name": "Illarion",
	
	"dockerComposeFile": "docker-compose.yml",
	"service": "game-server",
	"workspaceFolder": "/workspace",

	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
	},

	// Set *default* container specific settings.json values on container create.
	"settings": { 
		"C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
		"C_Cpp.formatting": "clangFormat",
		"cmakeExplorer.buildDir": "../tmp/illarion/build",
		"cmake.buildDirectory": "/tmp/illarion/build",
		"cmake.enabledOutputParsers": [
			"cmake",
			"gcc",
			"gnuld"
		],
		"cmake.statusbar.advanced": {
			"debug": { "visibility": "hidden" },
			"launch": { "visibility": "hidden" },
			"launchTarget": { "visibility": "hidden" },
			"kit": { "visibility": "hidden" },
			"ctest": { "color": true }
		},
		"cmake.generator": "Ninja",
		"cmake.debugConfig": {
			"args": [ "${workspaceFolder}/setup/illarion.conf" ],
		},
		"debug.showInStatusBar": "always",
		"terminal.integrated.shell.linux": "/bin/bash",
		"sqltools.connections": [
			{
				"previewLimit": 50,
				"server": "localhost",
				"port": 5432,
				"driver": "PostgreSQL",
				"name": "Illarion",
				"database": "illarion",
				"username": "illarion",
				"password": "illarion"
			}
		]
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"fredericbonnet.cmake-test-adapter",
		"ms-azuretools.vscode-docker",
		"ms-vscode.cmake-tools",
		"ms-vscode.cpptools",
		"mtxr.sqltools-driver-pg",
		"twxs.cmake"
	],

	"remoteUser": "vscode"
}