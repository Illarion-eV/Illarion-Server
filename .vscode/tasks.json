{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "options": {
                "cwd": "${config:cmake.buildDirectory}"
            },
            "command": "cmake --build .",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CPack",
            "type": "shell",
            "options": {
                "cwd": "${config:cmake.buildDirectory}"
            },
            "command": "cpack ."
        },
        {
            "label": "Terminate Server",
            "type": "shell",
            "command": "killall illarion"
        }
    ]
}